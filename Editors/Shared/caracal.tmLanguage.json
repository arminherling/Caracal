{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Caracal",
	"fileTypes": [
		"cara"
	],
	"patterns": [
		{
			"include": "#keywords"
		},
    {
      "include": "#strings"
    },
    {
      "include": "#comments"
    },
		{
			"include": "#boolean"
		},
		{
			"include": "#numbers"
    }
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.cpp.caracal",
					"match": "\\bcpp\\b"
				},
				{
					"name": "keyword.control.ref.caracal",
					"match": "\\bref\\b"
				},
				{
					"name": "keyword.control.def.caracal",
					"match": "\\bdef\\b"
				},
				{
					"name": "keyword.control.type.caracal",
					"match": "\\btype\\b"
				},
				{
					"name": "keyword.control.enum.caracal",
					"match": "\\benum\\b"
				},
				{
					"name": "keyword.control.if.caracal",
					"match": "\\bif\\b"
				},
				{
					"name": "keyword.control.else.caracal",
					"match": "\\belse\\b"
				},
				{
					"name": "keyword.control.while.caracal",
					"match": "\\bwhile\\b"
				},
				{
					"name": "keyword.control.for.caracal",
					"match": "\\bfor\\b"
				},
				{
					"name": "keyword.control.return.caracal",
					"match": "\\breturn\\b"
				},
				{
					"name": "keyword.control.break.caracal",
					"match": "\\bbreak\\b"
				},
				{
					"name": "keyword.control.skip.caracal",
					"match": "\\bskip\\b"
				},
				{
					"name": "keyword.control.and.caracal",
					"match": "\\band\\b"
				},
				{
					"name": "keyword.control.or.caracal",
					"match": "\\bor\\b"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.caracal",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.caracal",
					"match": "\\\\[abfnrtv'\"\\\\]"
				}
			]
		},
		"boolean": {
			"name": "constant.language.boolean.caracal",
			"match": "\\b(true|false)\\b"
		},
		"comments": {
			"name": "comment.line.double-slash.caracal",
			"match": "//.*$"
		},
		"numbers": {
			"name": "constant.numeric.caracal",
			"match": "\\b\\d+(\\.\\d+)?\\b"
		}
	},
	"scopeName": "source.caracal"
}